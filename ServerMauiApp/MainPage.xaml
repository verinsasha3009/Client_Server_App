<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServerMauiApp.MainPage">
    <VerticalStackLayout>
        <VerticalStackLayout.Resources>
            <ResourceDictionary >
                <Color x:Key="textColor" >#004D40</Color>
                <Color x:Key="backColor">#80CBC4</Color>
                <x:Double x:Key="margin">10</x:Double>
            </ResourceDictionary>
        </VerticalStackLayout.Resources>
        <Label Background="red"></Label>
        <Button ImageSource="dotnet_bot.png" Text="Start Server" TextColor="{StaticResource Key=textColor}"
      BackgroundColor="{StaticResource Key=backColor}" Margin="{StaticResource Key=margin}" Clicked="GoToForward" />
        <Entry x:Name="EntryName" Keyboard="Text"  FontFamily="Helvetica"
                FontSize="22" MaxLength ="15" ></Entry>
        <Button Text="Save Name" Clicked="ClickNameSave" ></Button>
    </VerticalStackLayout>

</ContentPage>
